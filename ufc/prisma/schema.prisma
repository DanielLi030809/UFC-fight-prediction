generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// This is the full dataset of fighters that needs to be filtered down by doing a join with the Input model
model Fighter {
  id     Int       @id @default(autoincrement())
  name   String?   @db.VarChar
  height String?   @db.VarChar
  weight Float?
  reach  Float?
  stance String?   @db.VarChar
  dob    DateTime? @db.Date
  slpm   Float?
  stracc String?   @db.VarChar
  sapm   Float?
  strdef String?   @db.VarChar
  tdavg  Float?
  tdacc  String?   @db.VarChar
  tddef  String?   @db.VarChar
  subavg Float?
  record String?   @db.VarChar

  @@index([name])
  @@index([height])
  @@index([weight])
  @@index([reach])
  @@index([stance])
  @@index([dob])
  @@index([slpm])
  @@index([stracc])
  @@index([sapm])
  @@index([strdef])
  @@index([tdavg])
  @@index([tdacc])
  @@index([tddef])
  @@index([subavg])
  @@index([record])
}

// This is gonna be what gets inputted into the model
model Input {
  id     Int     @id @default(autoincrement())
  name   String?
  height Float?
  weight Float?
  reach  Float?
  slpm   Float?
  stracc Float?
  sapm   Float?
  strdef Float?
  tdavg  Float?
  tdacc  Float?
  tddef  Float?
  subavg Float?
  win    Float?
  draw   Float?
  loss   Float?

  @@index([name])
  @@index([height])
  @@index([weight])
  @@index([reach])
  @@index([slpm])
  @@index([stracc])
  @@index([sapm])
  @@index([strdef])
  @@index([tdavg])
  @@index([tdacc])
  @@index([tddef])
  @@index([subavg])
  @@index([win])
  @@index([draw])
  @@index([loss])
}
